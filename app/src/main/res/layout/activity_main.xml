<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="53dp"
        android:layout_height="35dp"
        android:layout_marginStart="179dp"
        android:layout_marginTop="690dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <Button
        android:id="@+id/btnCadastro"
        android:layout_width="118dp"
        android:layout_height="43dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="21dp"
        android:backgroundTint="#F3F3F3"
        android:text="Cadastrar"
        android:textColor="#3E3E3E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="269dp"
        android:layout_height="388dp"
        android:layout_marginStart="193dp"
        android:layout_marginTop="-16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fumaca" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginStart="274dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FA5757"
        android:text="Entrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
        android:layout_width="244dp"
        android:layout_height="146dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="151dp"
        android:text="Sensor de Fumaça"
        android:textColor="#fb5757"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="78dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="119dp"
        android:layout_height="145dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="152dp"
        android:rotation="30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mq2" />

    <View
        android:id="@+id/view4"
        android:layout_width="348dp"
        android:layout_height="341dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="321dp"
        android:background="@drawable/rounded_corners_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
        android:layout_width="303dp"
        android:layout_height="180dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="464dp"
        android:justificationMode="inter_word"
        android:text="O MQ-Fire Sensor é um sistema de segurança para detecção de gases como: GLP(gás liquefeito de petróleo), fumaça, álcool, propano, metano, hidrogênio e monóxido de carbono(CO). Após detecção dos gases o sistema envia alertas ao usuário, através do site e do aplicativo. O sistema também gera dashboards sobre o volume de gases no ambiente e faz o acompanhamento em tempo real do local monitorado, mostrando o status atual da sala, que pode ser estável, em alerta ou instável, e deixa salvo em uma tabela todos os alertas e instabilidades."
        android:textColor="#383838"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="292dp"
        android:layout_height="106dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="335dp"
        android:background="#FB5757"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
        android:layout_width="103dp"
        android:layout_height="34dp"
        android:layout_marginStart="154dp"
        android:layout_marginTop="363dp"
        android:text="MQ-FIRE"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
        android:layout_width="103dp"
        android:layout_height="34dp"
        android:layout_marginStart="154dp"
        android:layout_marginTop="386dp"
        android:text="SENSOR"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>